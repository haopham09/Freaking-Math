<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C5CE7"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewSothu1"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:textSize="100sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="5dp"
                android:id="@+id/textviewPheptinh"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:textSize="100sp"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textviewSothu2"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:textSize="100sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvKetqua"
            android:textStyle="bold"
            android:textColor="#FFFF"
            android:textSize="100sp"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guiline"
                app:layout_constraintGuide_percent="0.5"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"/>
            <!--scaleType : chinh kich thuoc
            adjustViewBounds chinh kich thuoc khi xoay man hinh-->
            <ImageButton
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_check_mark_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/guiline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <ImageButton
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_wrong"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/guiline"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>